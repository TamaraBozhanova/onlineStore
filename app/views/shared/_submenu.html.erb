<div class="submenu">

  <h2><% if user_signed_in? && current_user.admin? %>
          <%=link_to 'Категории', admin_categories_path  %>
      <% else %>
          Категории
      <%end %>
  </h2>

  <ul class="nav nav-pills nav-stacked">
    <% Category.roots.each do |category|%>
    <li class="nav-item">
      <%= link_to category.name, category, class: "nav-link #{'active' if current_page?(category_path(category))||@phone.present? && @phone.category == category}" %>
      <%= render 'shared/submenu_categories' , categories: category.root.descendants.arrange %>
    </li>
    <% end %>
  </ul>

</div>